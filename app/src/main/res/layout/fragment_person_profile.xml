<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--  ScrollView to make the content scrollable  -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="9dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--  CardView  -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="9dp">
                    <!--  Add your content inside the CardView  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="1dp">
                        <!--  Image with Camera Icon  -->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <!--  Profile Image  -->
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profileImage"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/person"
                                app:civ_border_color="@android:color/white"
                                app:civ_border_width="2dp" />
                            <!--  Camera Icon  -->
                            <ImageView
                                android:id="@+id/cameraIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="bottom|end"
                                android:background="@drawable/circleshadow"
                                android:padding="8dp"
                                android:src="@drawable/camera" />
                        </FrameLayout>
                        <!--  Name and Edit Icon Row  -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <!--  Name  -->
                            <TextView
                                android:id="@+id/profileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_name"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                            <!--  Edit Icon  -->
                            <ImageView
                                android:id="@+id/editIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:src="@drawable/edit_square" />
                        </LinearLayout>
                        <!--  Job Title  -->
                        <TextView
                            android:id="@+id/jobTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/job_title"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />
                        <!--  Faculty and University  -->
                        <TextView
                            android:id="@+id/facultyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:gravity="center"
                            android:text="@string/faculty_text"
                            android:textColor="@android:color/white"
                            android:textSize="13sp" />
                        <!--  Address and Contact Info Row  -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <!--  Address  -->
                            <TextView
                                android:id="@+id/addressText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/address_text"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />
                            <!--  Contact Info (Clickable Text)  -->
                            <TextView
                                android:id="@+id/contactInfoButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:onClick="onContactInfoClick"
                                android:text="@string/contact_info"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--  Horizontal Line  -->
                <View
                    android:id="@+id/horizontalLine1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="#57000000" />
                <!--  TextView: My Files  -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/my_files"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <!--  Horizontal ScrollView for CV/Portfolio  -->
                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:id="@+id/horizontalLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">
                        <!--  CV Box  -->
                        <LinearLayout
                            android:id="@+id/cvBox"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/box"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:onClick="onCvClick"
                            android:orientation="horizontal"
                            android:padding="8dp">
                            <!--  CV Name  -->
                            <TextView
                                android:id="@+id/cvName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:gravity="start"
                                android:text="@string/cv"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                            <!--  CV Status Text  -->
                            <TextView
                                android:id="@+id/cvStatusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="8dp"
                                android:text=""
                                android:textColor="@color/primaryColor"
                                android:textSize="16sp" />
                            <!--  Upload Icon  -->
                            <ImageView
                                android:id="@+id/cvUploadIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:clickable="true"
                                android:contentDescription="Upload Icon"
                                android:focusable="true"
                                android:onClick="onUploadCvClick"
                                android:scaleType="centerCrop"
                                android:src="@drawable/baseline_upload_file_24" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
                <!--  Horizontal Line  -->
                <View
                    android:id="@+id/horizontalLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="#57000000" />
                <!--  TextView: Saved Jobs  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/saved_jobs"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <!--  "See More" Button  -->
                    <TextView
                        android:id="@+id/seeMoreSavedJobs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="end"
                        android:onClick="onSeeMoreSavedJobsClick"
                        android:text="@string/see_more"
                        android:textColor="@color/primaryColor"
                        android:textSize="14sp" />
                </LinearLayout>
                <!--  Horizontal ScrollView for Saved Jobs  -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">
                        <!--  Saved Job 1  -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/card"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/android_developer"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/robusta"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/location_remote"
                                    android:textSize="12sp" />

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:backgroundTint="@color/primaryColor"
                                    android:text="@string/apply"
                                    android:textColor="@android:color/white"
                                    app:cardCornerRadius="8dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!--  Saved Job 2  -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/android_developer"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/robusta"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/location"
                                    android:textSize="12sp" />

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:backgroundTint="@color/primaryColor"
                                    android:text="@string/apply"
                                    android:textColor="@android:color/white"
                                    app:cardCornerRadius="8dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
                <!--  Horizontal Line  -->
                <View
                    android:id="@+id/horizontalLine3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="#57000000" />
                <!--  TextView: Track Applications Status  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/track_applications_status"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <!--  "See More" Button  -->
                    <TextView
                        android:id="@+id/seeMoreTrackApplications"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="end"
                        android:onClick="onSeeMoreTrackApplicationsClick"
                        android:text="@string/see_more"
                        android:textColor="@color/primaryColor"
                        android:textSize="14sp" />
                </LinearLayout>
                <!--  Horizontal ScrollView for Track Applications Status  -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">
                        <!--  Track Job 1  -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/profile_name"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/robusta"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/location_remote"
                                    android:textSize="12sp" />

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:backgroundTint="@color/primaryColor"
                                    android:text="@string/under_evaluation"
                                    android:textColor="@android:color/white"
                                    app:cardCornerRadius="8dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!--  Track Job 2  -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/android_developer"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/robusta"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/location_remote"
                                    android:textSize="12sp" />

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:backgroundTint="#C20A0A"
                                    android:text="@string/refuse"
                                    android:textColor="@android:color/white"
                                    app:cardCornerRadius="8dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>
        <!--  FrameLayout for Fragments  -->
        <FrameLayout
            android:id="@+id/frameContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_menu"
            app:layout_constraintTop_toTopOf="parent" />
        <!--  BottomNavigationView  -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_menu"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="#0554A1"
            app:itemIconTint="@color/bottom_nav_item_colors"
            app:itemTextColor="@color/bottom_nav_item_colors"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>